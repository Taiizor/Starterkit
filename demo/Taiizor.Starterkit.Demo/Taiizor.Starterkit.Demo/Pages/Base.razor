@page "/"

@using Taiizor.Starterkit.Interface

@inject ITheme Theme

<PageTitle>Base</PageTitle>

<h1>Hello, world!</h1>

<p>Welcome to your new app.</p>
<p>Current version: <strong>@Theme.GetVersion()</strong>.</p>
<p>King variable: <strong>@Theme.GetVariable("King")</strong>.</p>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<SurveyPrompt Title="How is Taiizor.Starterkit working for you?" />

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}